{
  "expo": {
    "name": "SOVEH",
    "slug": "soveh-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A8A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.soveh.retail",
      "infoPlist": {
        "NSCameraUsageDescription": "SOVEH needs camera access for KYC verification and live photo capture",
        "NSLocationWhenInUseUsageDescription": "SOVEH needs location access to show nearby stores and delivery tracking",
        "NSFaceIDUsageDescription": "SOVEH uses Face ID for secure biometric login"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E3A8A"
      },
      "package": "com.soveh.retail",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "expo-local-authentication",
      "expo-notifications",
      "expo-location",
      "expo-camera",
      "expo-image-picker",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "231c7ba9-8518-4181-92bb-a6adf352934d"
      }
    }
  }
}
